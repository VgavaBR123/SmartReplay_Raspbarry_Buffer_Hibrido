# Configurações das Câmeras RTSP
CAMERA_1_URL=rtsp://admin:123456@192.168.226.201:554/profile1
CAMERA_2_URL=rtsp://admin:123456@192.168.226.202:554/profile1

# Parâmetros de Segmentação e Buffer
CHUNK_DURATION=5
BUFFER_SECONDS=30
FINAL_CLIP_DURATION=25

# Configurações de Transporte
RTSP_TRANSPORT=tcp

# Diretórios
TEMP_DIR=./temp_videos  # Buffer temporário na pasta do projeto
CLIPS_DIR=./clips

# Configurações de Reconexão
RECONNECT_INITIAL_DELAY=2
RECONNECT_MAX_DELAY=30
RECONNECT_MAX_ATTEMPTS=0  # 0 = infinito

# Modo de Gatilho: keyboard ou http
TRIGGER_MODE=keyboard
HTTP_PORT=8080

# Configurações de Log
LOG_LEVEL=INFO
LOG_FORMAT=json

# Configurações de FFmpeg
FFMPEG_KEYFRAME_INTERVAL=1
FFMPEG_PRESET=ultrafast
FFMPEG_CRF=23

# Configurações específicas do Sistema
# Para Windows, definir como true para usar ramdisk temporário
USE_WINDOWS_RAMDISK=false
WINDOWS_RAMDISK_SIZE=2048  # MB